generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Server {
  id         Int      @id @default(autoincrement())
  name       String
  ip         String
  port       String
  statuses   Status[]
  icon       String?
  changeIcon Boolean  @default(true)
  telegram   String?
  discord    String?
  youtube    String?
  link       String?
}

model Status {
  id          String   @id @default(uuid())
  server      Server   @relation(fields: [serverId], references: [id])
  serverId    Int
  isOnline    Boolean
  onlineCount Int?
  maxOnline   Int?
  version     String?
  date        DateTime @default(now())
}
